{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist"
  },
 "headers": [ {
    "source" : "**/*.*",
    "headers" : [ {
      "key" : "Access-Control-Allow-Origin",
      "value" : "*"
    },{
      "key" : "X-Frame-Options",
      "value" : "SAMEORIGIN"
    } ]
  }, {
    "source" : "**/*.@(jpg|jpeg|gif|png)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=7200"
    } ]
  }, {
    "source" : "404.html",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=300"
    } ]
  } ]
}
